{
    "compilerOptions": {
        "incremental": true,
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "target": "esnext",
        "module": "esnext",
        "newLine": "lf",

        "pretty": true,
        "preserveWatchOutput": true,
        "noErrorTruncation": true,

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "preserve"
    }
}
